= content_for :after_scripts do
  :javascript
    $(document).ready(function(){
    });

= form_for seo, as: :seo, url: path_to_action do |f|
  .form-group.col-md-12
    - if seo.errors.any?
      = render partial: 'errors', locals: { object: seo }

  .form-group.col-md-12
    .col-md-3= f.label :title, 'Название', class: 'control-label'
    .col-md-6= f.text_field :title

  .form-group.col-md-12
    .col-md-3= f.label :namespace, 'Поддомен(если имеется)', class: 'control-label'
    .col-md-6= f.text_field :namespace

  .form-group.col-md-12
    .col-md-3= f.label :url, 'Url', class: 'control-label'
    .col-md-6= f.text_field :url

  .form-group.col-md-12
    .col-md-3= f.label :description, 'Meta description', class: 'control-label'
    .col-md-6= f.text_area :description, rows: 5

  .form-group.col-md-12
    .col-md-3= f.label :keywords, 'Meta keywords', class: 'control-label'
    .col-md-6= f.text_area :keywords, rows: 5

  .form-group.col-md-12
    .col-md-3= f.label :images_alt, 'ALT для картинок', class: 'control-label'
    .col-md-6= f.text_area :images_alt, value: seo.images_alt.to_json, rows: 5

  .form-group
    = '*'
    %small
      Пример данных для картинок:
      %b
        =  '{"primer": "Пример"}'

  %br
  .form-group.pull-right.col-md-6
    = link_to 'Назад', sets_path, class: 'btn btn-default'
    = f.submit 'Сохранить', class: 'btn btn-success'

