= stylesheet_link_tag "seo_meta_tags/jsoneditor"
= content_for :after_scripts do
  = javascript_include_tag 'seo_meta_tags/jquery.jsoneditor'
  :javascript
    $(document).ready(function(){
    });

= form_for seo, as: :seo, url: path_to_action do |f|
  .form-group.col-md-12
    - if seo.errors.any?
      = render partial: 'layouts/form_errors', locals: {errors: seo.errors.values.flatten}

  .form-group.col-md-12
    = f.label :title, 'Название', class: 'col-sm-2 control-label'
    = f.text_field :title,        class: 'col-sm-6 control-label'

  .form-group.col-md-12
    = f.label :url, 'Url', class: 'col-sm-2 control-label'
    = f.text_field :url,    class: 'col-sm-6 control-label'

  .form-group.col-md-12
    = f.label :description, 'Meta description', class: 'col-sm-2 control-label'
    = f.text_area :description, rows: 5, class: 'col-sm-6 control-label'

  .form-group.col-md-12
    = f.label :keywords, 'Meta keywords', class: 'col-sm-2 control-label'
    = f.text_area :keywords, rows: 5, class: 'col-sm-6 control-label'

  .form-group.col-md-12
    = f.label :images_alt, 'ALT для картинок', class: 'col-sm-2 control-label'
    = f.text_area :images_alt, rows: 5, class: 'col-sm-6 control-label'

  .form-group
    = '*'
    %small
      Пример данных для картинок:
      %b
        =  '{"primer": "Пример"}'

  %br
  .form-group.pull-right.col-md-6
    = link_to 'Назад', sets_path, class: 'btn btn-default'
    = f.submit 'Сохранить', class: 'btn btn-success'

